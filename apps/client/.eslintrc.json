{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "excludedFiles": ["**/*.spec.ts", "environment.prod.ts", "test-setup.ts"],
            "extends": ["plugin:@nrwl/nx/angular", "@w11k/eslint-config/lib/angular.recommended"],
            "parserOptions": {
                "project": [
                    "apps/client/tsconfig.app.json"
                ]
            },
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "app",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "app",
                        "style": "kebab-case"
                    }
                ]
            }
        },
        {
            "files": ["*.html"],
            "extends": ["plugin:@nrwl/nx/angular-template"],
            "rules": {}
        }
    ]
}
